pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Build the application from GIT'
            }
        }
        stage('Scan') {
            steps {
                echo 'Sonar scan done'
            }
        }
        stage('deploy') {
            steps {
                echo 'Deploy the code'
            }
        }
        stage('Success') {
            steps {
                echo 'All steps are completed'
            }
        }
    }
}
